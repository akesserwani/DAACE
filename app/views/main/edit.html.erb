<%= render partial: "layouts/shared/navbar"%>


    
<%= form_with model: @data_id do |form|%>

    <% if form.object.errors.any?%>
    <div>
    <%form.object.errors.full_messages.each do |message| %>
       <br> <center><div> <%= message %> </div></center>
        <%end%>
    </div>
    <%end%>


    <div class="wrapper">
            <div class = "list_1" style = "overflow-y:scroll;overflow: -moz-scrollbars-vertical; ">
                <div class="side_list" style = "margin:50px; width:80%;">
                    <h style = "color:#484848; font-size: 4vmin; text-align: center; margin-left:20px;">Site Submission</h><br><br>
                        <%= form.text_field :creator_name, placeholder: 'Name', id: 'name', type: 'text', class: 'custom_form', style: 'height:10%;'  %>
                        <%= form.text_field :creator_email, placeholder: 'Email', id: 'email_form', type: 'text', class: 'custom_form', style: 'height:10%;' %>
                        <hr>
                        <%= form.text_field :title, placeholder: 'Site Name', id: 'site_name', type: 'text', class: 'custom_form', style: 'height:10%;'  %>
                        <%= form.text_field :location, placeholder: 'Location', id: 'site_location', type: 'text', class: 'custom_form', style: 'height:10%;' %>
                        <%= form.text_field :era, placeholder: 'Period', id: 'site_period', type: 'text', class: 'custom_form', style: 'height:10%;' %>
                        <%= form.text_field :long, placeholder: 'Longitude', id: 'site_long', type: 'text', class: 'custom_form', style: 'height:10%;' %>
                        <%= form.text_field :lat, placeholder: 'Latitude', id: 'site_lat', type: 'text', class: 'custom_form', style: 'height:10%;' %>

                        <%= form.hidden_field :edit_date, value: Time.now.strftime("%d/%m/%Y %H:%M") %>
                        <%= form.hidden_field :editor_email, value: current_user.email %>

                </div>
            </div>

                <div class = "list_2">
                    <div class="side_list" style = "display: flex; justify-content: center;flex-direction: column;"><br><br>
                        <h style = "color:#484848; font-size: 4vmin; text-align: center;">Site Information</h><br>
                        <%= form.text_area :source, id: 'site_info', type: 'text', class: 'custom_form', style: 'position:relative;height:100%;width:95%;padding:20px;'%>

                    </div>
                </div>

            
        </div>
    

        <div class = "list_3">
            <div class="side_list" style = "width:100%;height:100%;background-color:#EAEAEA;">
                <div class = "wrapper" style = "position:relative;margin:50px;padding:20px; top:20px;">
                    <div style = "width: 30%; height:100px;margin:auto;">
                        <%= form.radio_button :status, 'approved'%> 
                        <%= form.label :status, 'Approved', :value => 'approved'%><br>
                        <%= form.radio_button :status, 'unapproved' %>
                        <%= form.label :status, 'Unapproved', :value => 'unapproved'%>
                    </div>
                    <div style = "width: 30%; height:100px;margin:auto;">
                            <%= form.radio_button :opt, 'green'%> 
                            <%= form.label :opt, 'Active and Maintained', :value => 'green'%><br>
                            <%= form.radio_button :opt, 'red'%> 
                            <%= form.label :opt, 'Endangered/Abandoned', :value => 'red'%><br>
                            <%= form.radio_button :opt, 'blue' %>
                            <%= form.label :opt, 'Potential Site', :value => 'blue'%>
                    </div>

                    <div style = "width: 40%; height:100px; margin:auto; display:inline-block; margin-left:200px;">
                        <div style = "display:inline-block;">
                            <%= form.button 'Update', class: 'button', style: 'font-size: 3vmin; border:none; width: 120px; height:60px;'%>
                        </div>
                        <%end%>
                        <div style = "display:inline-block;">
                            <%= button_to "Delete", destroy_data_main_path(@data_id), method: :delete, class: "button", style: "font-size: 3vmin; border:none; width: 120px; height:60px; background-color:#8b7e7e;", onclick: "return confirmDestroy('Are you sure want to delete this?')" %>
                        </div>

                        <script>
                            function confirmDestroy(message) {
                                if (!confirm(message)) {
                                    return false;
                                }
                                }
                        </script>
                    </div>
                </div>
            </div>
        </div>



<%= render partial: "layouts/shared/footer"%>
